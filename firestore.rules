rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if the user is a collaborator
    // Checks if the user's email exists in the 'collaborators' array field of the user document
    function isCollaborator(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return isAuthenticated() && 
             (userDoc.data.collaborators is list && 
              request.auth.token.email in userDoc.data.collaborators);
    }

    // Match any document in the 'users' collection
    match /users/{userId} {
      allow read, write: if userId == 'mock-user-id' || isOwner(userId) || isCollaborator(userId);
      
      // Allow access to subcollections (like bills, settings, etc.)
      match /{document=**} {
        allow read, write: if userId == 'mock-user-id' || isOwner(userId) || isCollaborator(userId);
      }
    }
  }
}
