rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if the user is a collaborator
    function isCollaborator(userId) {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(userId)/collaborators/$(request.auth.token.email));
    }

    // Match any document in the 'users' collection
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isCollaborator(userId);
      
      // Allow access to subcollections (like bills, settings, etc.)
      match /{document=**} {
        allow read, write: if isOwner(userId) || isCollaborator(userId);
      }
    }
  }
}
